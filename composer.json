{
    "name": "linna/csrf-guard",
    "type": "library",
    "description": "Linna Cross-site request forgery Guard",
    "keywords": ["csrf", "csrf-guard", "surf", "php"],
    "homepage": "https://github.com/linna/csrf-guard",
    "license": "MIT",
    "authors": [
        {
            "name": "Sebastian Rapetti",
            "email": "sebastian.rapetti@tim.it"
        }
    ],
    "support": {
        "issues": "https://github.com/linna/csrf-guard/issues"
    },
    "require": {
        "php": ">=7.4"
    },
    "require-dev": {
        "infection/infection": ">=0.26",
        "phpstan/phpstan": ">=1.8",
        "phpunit/phpunit": ">=9.0"
    },
    "autoload": {
        "psr-4": {
            "Linna\\": "src/Linna/"
        }
    },
    "autoload-dev": {
        "psr-4": {
            "Linna\\":  "tests/Linna/"
        }
    },
    "config": {
        "allow-plugins": {
            "infection/extension-installer": true
        }
    }
}
